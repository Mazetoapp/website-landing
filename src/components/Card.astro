---
//src/components/Card.astro
const {name, description, about, note, twitter, github, profileImage } = Astro.props;

import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1>{name}</h1>
            <h2>{description}</h2>
            <h1>{about}</h1>
            <div class="icons">
                <p>{note}</p>
                <a href={github} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        GitHub
                    </span>
                    <i class="bi bi-github"></i>
                </a>
                <a href={twitter} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        Twitter / X
                    </span>
                    <i class="bi bi-twitter"></i>
                </a>
            </div>
        </div>
        <div class="image">
            <img src={profileImage} alt="">
        </div>
    </div>
</div>